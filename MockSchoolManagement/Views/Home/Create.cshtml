@model Student

<form asp-controller="home" asp-action="create" method="post">

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name：</label>
      
            <input asp-for="Name" class="form-control" placeholder="请输入姓名" />
   
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label">Email：</label>
        <input asp-for="Email" class="form-control" placeholder="请输入邮箱号"/>
    </div>

    <div class="form-group row">
        <label asp-for="Major" class="col-sm-2 col-form-label">Major：</label>
        <input asp-for="Major"  class="form-control" placeholder="请输入科目" />
    </div>
    <div class="form-group row">
        <label asp-for="ClassName" class="col-sm-2 col-form-label">ClassName:</label>

        <select asp-for="ClassName" asp-items="Html.GetEnumSelectList<ClassNameEnum>()" class="form-control custom-select mr-sm-2"></select>

    </div>
    <div class="form-group" row>

        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">添加学生</button>
        </div>

    </div>
</form>